<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Communication status -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtConnection"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.41"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/robotDisconnected"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtEmpty1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.41"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/empty"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- General status -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_flags"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtGeneralStatus"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.41"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/empty"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Robot status -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_motors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/robot_status_header" />
    </LinearLayout>

    <!-- Creation of current speeds -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/left_speed_txt" />

        <TextView
            android:id="@+id/leftSpeedTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/right_speed_txt" />

        <TextView
            android:id="@+id/rightSpeedTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/odomXlabel" />

        <TextView
            android:id="@+id/odomXTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/odomYlabel" />

        <TextView
            android:id="@+id/odomYTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/odomThetalabel" />

        <TextView
            android:id="@+id/odomThetaTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />
                
    </LinearLayout>    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8sp"
            android:text="@string/batteryLabel" />

        <TextView
            android:id="@+id/batteryTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/init_value" />
                
    </LinearLayout>     
    
     <!-- setting title -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_motors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_header" />
    </LinearLayout>

       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5sp"
            android:text="@string/desSpeed" />

        <EditText
            android:id="@+id/txtDesSpeed"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:imeOptions="actionDone|normal"
            android:inputType="number|numberSigned"
            android:text="0" >

            <requestFocus />
            
        </EditText>              
            
    </LinearLayout>    
    
       	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
    
    	<CheckBox
    	    android:id="@+id/chkSpeedControl"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:onClick="controllerOnOff"
    	    android:text="Speed control" />
    	
    	<CheckBox
    	    android:id="@+id/chkSoftAcc"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:onClick="softAccOnOff"
    	    android:text="Soft acceleration" />
            
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10sp"
            android:text="@string/rotationTxt" />

        <EditText
            android:id="@+id/txtDesRot"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:imeOptions="actionDone|normal"
            android:inputType="number"
            android:text="0" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnRotation"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="0.41"
            android:onClick="startRotation"
            android:text="@string/go" />
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="28sp"
            android:text="@string/movementTxt" />
        
        <EditText
            android:id="@+id/txtDesMov"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:imeOptions="actionDone|normal"
            android:inputType="number"
            android:text="0" >
            <requestFocus />
        </EditText>        
        
        <Button
            android:id="@+id/btnMovement"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="0.41"
            android:onClick="startMovement"
            android:text="@string/go" /> 
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/btnStop"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:onClick="stopRobot"
            android:text="@string/stop" />
            
    </LinearLayout>    
    
    <!-- Logo and site -->



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="wheelphone"
            android:maxWidth="200dp"
            android:src="@drawable/wheelphone_logo" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/weblink" />
    </LinearLayout>

</LinearLayout>
